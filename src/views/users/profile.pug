extends ../base
include ../mixins/video

block content
    div.profile__data
        img(src=user.avatarUrl, crossorigin).avatar
        h3=user.name
    div.video-grid
        each video in user.videos
            //- videos mixin에 video를 넘겨준다.
            +videos(video)
        else    
            //- videos가 비어있는 경우 출력된다.
            span.empty__message sorry nothing found