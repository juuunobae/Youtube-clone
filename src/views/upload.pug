extends base.pug

block content 
    video#preview
    div
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method='POST', enctype='multipart/form-data')
        label(for="video") Video
        input(name='video', id='video', type='file', required, accept='video/*')
        input(name='title', placeholder='Title', required, type='text', maxlength=80)
        input(name='description', placeholder='Description', required, type='text', maxlength=140)
        input(name='hashtags', placeholder='Hashtags, separated by comma', required, type='text')
        input(type='submit', value='Upload Video')

block script 
    script(src="/static/js/recorder.js") 